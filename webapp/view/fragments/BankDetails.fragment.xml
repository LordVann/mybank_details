                <VBox id="vBox1" class="sapUiSmallMargin sapUiLargeMarginBegin">

                    <!-- <Title text="{i18n>accDetails}" id="accDetails" level="H1"/> -->

                    <HBox id="hBox1">
                        <Label id="lblacnum" text="{i18n>accNum}" class="sapUiSmallMarginEnd"/>
                        <Text id="accountNum" text="7020923********"/>
